@model WebDTDD.Models.NguoiDung

@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<link href="~/Content/StyleSheet1.css" rel="stylesheet" />
<div class="content">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h2 style="margin-top: 20px; margin-left:45%">Đăng nhập</h2>
                <hr />
                <br />
                <h3 class="text-center" style="font-weight:600;margin-bottom:30px; color:red;">@ViewBag.ThongBao</h3>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                <div class="form-group" style="margin-left: 30%">
                    @Html.LabelFor(model => model.TaiKhoan, "Tài khoản", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10" style="width: 30%">
                        @Html.TextBoxFor(model => model.TaiKhoan, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TaiKhoan, "", new { @class = "text-danger" })
                        @ViewData["Loi1"]
                    </div>
                </div>

                <div class="form-group" style="margin-left: 30%">
                    @Html.LabelFor(model => model.MatKhau, "Mật khẩu", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10" style="width: 30%">
                        @Html.PasswordFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                        @ViewData["Loi2"]
                    </div>
                </div>



                <div class="form-group" style="margin-left: 30%">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Đăng nhập" class="btn btn-default" />
                    </div>
                </div>
            </div>
            }
    </div>
