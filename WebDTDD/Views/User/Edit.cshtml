@model WebDTDD.Models.NguoiDung

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2 style="margin-top: 20px; margin-left:45%">Sửa thông tin người dùng</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">

    <hr />
    <br />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.IdUser)

    <div class="form-group" style="margin-left: 30%">
        @Html.LabelFor(model => model.TenUser, "Tên người dùng", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10" style="width: 30%">
            @Html.EditorFor(model => model.TenUser, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenUser, "", new { @class = "text-danger" })
            @ViewData["Loi1"]
        </div>
    </div>
    <div class="form-group" style="margin-left: 30%">
        @Html.LabelFor(model => model.MatKhau, "Mật khẩu", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10" style="width: 30%">
            @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
            @ViewData["Loi2"]
        </div>
    </div>

    <div class="form-group" style="margin-left: 30%">
        @Html.LabelFor(model => model.Gmail, "Gmail", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10" style="width: 30%">
            @Html.EditorFor(model => model.Gmail, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Gmail, "", new { @class = "text-danger" })
            @ViewData["Loi3"]
        </div>
    </div>

    <div class="form-group" style="margin-left: 30%">
        @Html.LabelFor(model => model.SDT, "Số điện thoại", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10" style="width: 30%">
            @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
            @ViewData["Loi4"]
        </div>
    </div>
    <div class="form-group" style="margin-left: 30%">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Lưu" class="btn btn-success" />
        </div>
    </div>
</div>
}

<div>
    <a href="@Url.Action("HomePage","Shop")">
        <button class="btn btn-outline-dark flex-shrink-0" type="button">
            <i class="bi bi-arrow-left" style="font-size: 15px"></i>
            <strong style="font-size:14px">Quay lại</strong>
        </button>
    </a>
</div>
