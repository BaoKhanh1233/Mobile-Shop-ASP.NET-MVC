@model IEnumerable<WebDTDD.Models.HoaDon>


@{
    ViewBag.Title = "ListHD";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<head>
    <meta charset="utf-8">
    <title>Bootstrap Part5</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <link rel="stylesheet" type="text/css" href="css/bootstrap.min.css">
</head>

<body>
    <div class="container">
        <table class="table table-bordered">
            <thead style="background: #007acc">
                <tr style="color:aliceblue">
                    <th><strong>Tên khách hàng</strong></th>
                    <th><strong>Tên sản phẩm</strong></th>
                    <th><strong>Ngày đặt</strong></th>
                    <th><strong>Ngày giao</strong></th>
                    <th><strong>Địa chỉ</strong></th>
                    <th><strong>Số lượng</strong></th>
                    <th><strong>Tổng tiền</strong></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr style="color: black">
                        <td>@item.tenkh</td>
                        <td>@item.tensp</td>
                        <td>@String.Format("{0:dd/MM/yyyy}", item.ngaydat)</td>
                        <td>@String.Format("{0:dd/MM/yyyy}", item.ngaygiao)</td>
                        <td>@item.diachi</td>
                        <td>@item.soluong</td>
                        <td>@String.Format("{0:0,0đ}", item.tongtien)</td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
    <script src="~/Content/js/jquery-2.1.4.min.js"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>
</body>