@model WebDTDD.Models.SanPham

@{
    ViewBag.Title = "DeleteProduct";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div>
    <h4>Sản Phẩm</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên sản phẩm
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenSP)
        </dd>

        <dt>
            Giá sản phẩm
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GiaSP)
        </dd>

        <dt>
            Màn hình
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ManHinh)
        </dd>

        <dt>
            Vi xử lý
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ViXuLy)
        </dd>

       

        <dt>
            Số lượng tồn
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SLTon)
        </dd>

        <dt>
            Mô tả sản phẩm
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MoTaSP)
        </dd>

        <dt>
            Bộ nhớ
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BoNho)
        </dd>

       

    </dl>

    <h3>Xóa sản phẩm này ?</h3>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions">
            <a href="@Url.Action("ListSP", "Admin")">
                <button class="btn btn-outline-dark flex-shrink-0" type="button">

                    <strong style="font-size:14px">Quay lại</strong>
                </button>
            </a> |
            <input type="submit" value="Xóa sản phẩm" class="btn btn-outline-danger" />
        </div>
    }
</div>
